{% extends 'base.html.twig' %}

{% block title %}List of Joueurs{% endblock %}

{% block body %}
    <h1>List of Joueurs</h1>

    <table>
        <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Role</th>
            <th>Match ID</th>
        </tr>
        </thead>
        <tbody>
        {% for joueur in joueurs %}
            <tr>
                <td>{{ joueur.id }}</td>
                <td>{{ joueur.nom }}</td>
                <td>{{ joueur.role }}</td>
                <td>{{ joueur.matchid ? joueur.matchid.id : 'N/A' }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <a href="{{ path('delete_joueur')}}" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this joueur?');">Delete</a>
{% endblock %}
